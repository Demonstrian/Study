<Window x:Class="WPFwork.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFwork"
        mc:Ignorable="d"
        Title="Info" Height="250" Width="440">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition Height="30"/>
			<RowDefinition Height="200"/>
		</Grid.RowDefinitions>
		<Label Content="Программа разработана с целью вывода суммы покупки пользователю."/>
		<Label Content="Авторство лежит на Интернет магазине детских игрушек Ласковый." Grid.Row="1"/>
		<Label Content="По вопросам и предложениям обращаться на почту - laskoviy@mail.ru" Grid.Row="2"/>
		<Button Content="Закрыть" Name="btnInfoClose" Grid.Row="2" VerticalAlignment="Top" Margin="50" Click="btnInfoClose_Click"/>
	</Grid>
</Window>
