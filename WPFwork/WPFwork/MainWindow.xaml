<Window x:Class="WPFwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFwork"
        mc:Ignorable="d"
        Title="Магазин игрушек" Height="270" Width="400">
    <Grid Background="#ffdadada">
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition Height="150"/>
			<RowDefinition Height="50"/>
			<RowDefinition Height="200"/>
		</Grid.RowDefinitions>
		<Label Content="Интернет магазин игрушек Ласковый" HorizontalAlignment="Center" Height="30"/>
		<Button x:Name="btnClose" Content="Закрыть" Width="150" Height="30" Grid.Row="1" VerticalAlignment="Bottom" Margin="25" Click="btnClose_Click"/>
		<Button x:Name="btnInfo" Content="Справка" Width="150" Height="30" Grid.Row="1" VerticalAlignment="Center" Margin="25" Click="btnInfo_Click"/>
		<Button x:Name="btnNext" Content="Авторизация" Width="150" Height="30" Grid.Row="1" VerticalAlignment="Top" Margin="25" Click="btnNext_Click"/>
	</Grid>
</Window>
